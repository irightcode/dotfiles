[user]
	name = Charles Russell
[core]
  editor = vim
	pager = less -F -X
	excludesfile = ~/.gitingore
[alias]
  pr = pull --rebase
  fp = fetch --prune
  hist = log --pretty=format:'%C(yellow)[%ad]%C(reset) %C(green)[%h]%C(reset) | %C(red)%s %C(bold red){{%an}}%C(reset) %C(blue)%d%C(reset)' --graph --date=short
  co = checkout
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[include]
  path = ~/.gitconfig.local
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
