# -- feeds ---------------------------------------------------------------------

auto-reload yes
reload-time 120
reload-threads 11
download-retries 4
download-timeout 10
prepopulate-query-feeds yes
max-items           200
article-sort-order  desc


# -- navigation ----------------------------------------------------------------

browser open

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

unbind-key g # bound to `sort` by default
bind-key g home
unbind-key G # bound to `rev-sort` by default
bind-key G end

bind-key i sort
bind-key I rev-sort

bind-key b toggle-source-view
bind-key U toggle-show-read-feeds
bind-key u show-urls

# https://github.com/catppuccin/newsboat/blob/main/themes/dark
color listnormal         color15 default
color listnormal_unread  color2  default
color listfocus_unread   color2  color0
color listfocus          default color0
color background         default default
color article            default default
color end-of-text-marker color8  default
color info               color4  color8
color hint-separator     default color8
color hint-description   default color8
color title              color14 color8

highlight article "^(Feed|Title|Author|Link|Date): .+" color4 default bold
highlight article "^(Feed|Title|Author|Link|Date):" color14 default bold

highlight article "\\((link|image|video)\\)" color8 default
highlight article "https?://[^ ]+" color4 default
highlight article "\[[0-9]+\]" color6 default bold
